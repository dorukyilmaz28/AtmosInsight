    "test-ai": "cd backend && python test_ai.py"
  },
  "dependencies": {
    "axios": "^1.12.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "weather",
    "forecast",
    "ai",
    "react",
    "express",
    "nasa",
    "space-apps"
  ],
